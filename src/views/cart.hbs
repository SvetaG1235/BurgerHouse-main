<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Корзина</title>
    <link rel="stylesheet" href="/stylesheets/cart_style.css">
</head>
<body>
    <div class="container">
        <h1>Корзина</h1>
        <div class="cart">
            <ul id="cart-items">
                {{#if cartItems.length}}
                    {{#each cartItems}}
                        <li>
                            {{this.name}} - {{this.quantity}} x {{this.price}} руб.
                            <button class="remove-item" data-id="{{this.id}}">Удалить</button>
                        </li>
                    {{/each}}
                {{else}}
                    <li>Корзина пуста</li>
                {{/if}}
            </ul>
            <div class="cart-total">
                <strong>Итого: </strong>
                <span id="cart-total-price">{{totalPrice}} руб.</span>
            </div>
        </div>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cartItems = document.getElementById('cart-items');
        const cartTotalPrice = document.getElementById('cart-total-price');

        function fetchCart() {
            // Получаем данные из localStorage
            return JSON.parse(localStorage.getItem('cart')) || [];
        }

        function updateCart() {
            const cart = fetchCart();
            cartItems.innerHTML = '';
            let totalPrice = 0;

            if (cart.length === 0) {
                cartItems.innerHTML = '<li>Корзина пуста</li>';
                cartTotalPrice.textContent = '0 руб.';
                return;
            }

            cart.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = `
                    ${item.name} - ${item.quantity} x ${item.price} руб.
                    <button class="remove-item" data-id="${item.id}">Удалить</button>
                `;
                cartItems.appendChild(li);
                totalPrice += item.price * item.quantity;
            });
            cartTotalPrice.textContent = `${totalPrice} руб.`;
        }

        function removeItem(id) {
            const cart = fetchCart();
            const updatedCart = cart.filter(item => item.id !== id);
            localStorage.setItem('cart', JSON.stringify(updatedCart));
            updateCart(); 
        }

        cartItems.addEventListener('click', (event) => {
            if (event.target.classList.contains('remove-item')) {
                const itemId = event.target.dataset.id;
                removeItem(itemId);
            }
        });

        updateCart();
    });
</script>
</body>
</html>
