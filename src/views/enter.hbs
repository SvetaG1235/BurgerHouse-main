<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Вход</title>
</head>
<body>
    <div class="main">
        <div class="logo">
            <img src="">
        </div>
        
        <div class="forms">
            <h2>Вход</h2>
            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" 
                           placeholder="Введите имя пользователя (логин)" 
                           value="{{username}}" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" 
                           placeholder="Введите пароль" required>
                </div>
                <button type="submit" class="form-control">Войти</button>
            </form>
            <p>Нет аккаунта? <a href="/auth/register">Зарегистрироваться</a></p>
        </div>
    </div>
    <script>
document.getElementById('loginForm').addEventListener('submit', async (event) => {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());

    try {
        const response = await fetch('/auth/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
        });

        // Обрабатываем ответ как JSON только если это действительно JSON
        const contentType = response.headers.get('content-type');
        if (contentType && contentType.includes('application/json')) {
            const result = await response.json();
            if (response.ok) {
                window.location.href = '/';
            } else {
                alert(result.error || 'Ошибка при входе');
            }
        } else {
            // Если получили HTML (например при ошибке валидации)
            const text = await response.text();
            console.error('Ожидался JSON, но получили:', text);
            alert('Произошла ошибка. Проверьте консоль для деталей.');
        }
    } catch (error) {
        console.error('Ошибка:', error);
        alert('Произошла ошибка при отправке запроса');
    }
});
</script>

</body>
</html>