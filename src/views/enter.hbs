<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../style.css">
    <title>Вход</title>
</head>
<body>
    <div class="main">
        <div class="logo">
            <img src="">
        </div>
        
        <div class="forms">
            <h2>Вход</h2>
            <form id="loginForm">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Введите имя пользователя (логин)" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Введите пароль" required>
                </div>
                <button type="submit" class="form-control">Войти</button>
            </form>
            <p>Нет аккаунта? <a href="register">Зарегистрироваться</a></p>
        </div>
    </div>
     <script>
  // Обработка отправки формы
       document.getElementById('loginForm').addEventListener('submit', async (event) => {
            event.preventDefault(); // Отменяем стандартное поведение формы

            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/auth/enter', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                const result = await response.json();

                if (response.ok) {
                    // Перенаправляем на страницу "web-app-bh-entered" после успешного входа
                    window.location.href = '/web-app-bh-entered';
                } else {
                    alert(result.error || 'Ошибка при входе');
                }
            } catch (error) {
                console.error('Ошибка:', error);
                alert('Произошла ошибка при отправке запроса');
            }
        });
    </script>
    
</body>
</html>


